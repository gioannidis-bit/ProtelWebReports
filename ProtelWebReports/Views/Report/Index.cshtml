@{
    ViewData["Title"] = "Report Generator";
}

<div class="container">
    <h2 class="text-center my-4">Protel Report Generator</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Generate" method="get">
                <div class="form-group mb-3">
                    <label for="reportId">Report ID:</label>
                    <select name="reportId" id="reportId" class="form-control" required>
                        <option value="">-- Select a Report --</option>
                        <option value="hit_AvailabilityPeriod">Availability Period</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="fromDate">From Date:</label>
                    <input type="date" name="fromDate" id="fromDate" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                    <label for="toDate">To Date:</label>
                    <input type="date" name="toDate" id="toDate" class="form-control" required>
                </div>

                <div class="form-group mb-3">
                    <label for="revenueType">Revenue Type:</label>
                    <select name="revenueType" id="revenueType" class="form-control">
                        <option value="0">Gross</option>
                        <option value="1">Net</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="comType">Commitment Type:</label>
                    <select name="comType" id="comType" class="form-control">
                        <option value="1">Detailed</option>
                        <option value="2">Global</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Generate Report</button>
            </form>
        </div>
    </div>
</div>

<script>
    // Set default dates (today and a week later)
    window.onload = function() {
        const today = new Date();
        const nextWeek = new Date();
        nextWeek.setDate(today.getDate() + 7);

        document.getElementById('fromDate').valueAsDate = today;
        document.getElementById('toDate').valueAsDate = nextWeek;
    };
</script>